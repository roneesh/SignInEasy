// Javascript Countdown to refresh page when idle.

:javascript
  var time = 0;
  function timeIncrement() {
    time++;
    console.log(time); //comment this out in production
    if (time > 120) { // reloads page every 120s
      window.location.reload();
    };
  };
  $(document).ready(function() {
    setInterval("timeIncrement()",1000); // Runs this function every second
    $(this).mousemove(function (e) {
      time = 0;
    });
    $(this).keypress(function (e) {
      time = 0;
    });
  });




