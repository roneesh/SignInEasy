<!DOCTYPE html>
%html
%head
  = javascript_include_tag 'application'
  
  = csrf_meta_tag 
  = stylesheet_link_tag 'application' 

%body
  #wrap
    %nav.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand SignInEasy
          =# link_to image_tag 'SignInEasyLogo.jpg'
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
        
          %ul.nav.navbar-nav
              
            -if signed_in?
              %li
                = link_to "Dashboard", organization_guests_path(current_user.organization.id)
              %li.disabled
                = link_to "Reports"             
              %li
                = link_to "Check In Guest", new_organization_guest_path(current_user.organization.id)
              
          %ul.nav.navbar-nav.navbar-right
      
            -if signed_in?
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => ""}
                  = current_user.organization.name
                  %b.caret
                %ul.dropdown-menu

                  %li
                    = link_to "Front Desk", new_organization_guest_path(current_user.organization.id)
                  %li.disabled
                    = link_to "Settings" 
                  %li.divider
                  %li
                    = link_to "Visitors"
                  %li
                    = link_to "Manage Members", organization_employees_path(current_user.organization.id)
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => ""}
                  = current_user.name
                  %b.caret
                %ul.dropdown-menu 
                  %li
                    = link_to "Settings"
                
                  %li.divider
                  %li
                    = link_to t('.sign_out'), sign_out_path, :method => :delete 
            -else
              =# form_tag 'Sign in', :class => 'btn btn-default navbar-btn', sign_in_path   
              %button.btn.btn-default.navbar-btn{:type => "button"} Sign in


      / /.navbar-collapse
    .container
      #flash
      -flash.each do |key, value|
        =key
        %br
        =value
      = yield

  #footer
    .container
      %p.text-muted.credit
        &copy; 2013 SignInEasy